<!DOCTYPE html>
<html>
<head>
  <title>FreelanceTool</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="//cdn.ckeditor.com/4.5.7/full/ckeditor.js"></script>
</head>
<body>
<% if current_user %>
<div class="nav_bar">
	<nav>	
		<img src="http://placehold.it/100x100">
		<ul>
			<div class="nav_buttons">
				<li><%= link_to "Dashboard", user_path(current_user) %></li>
				<li><%= link_to "Email", clients_path %></li>
				<li><%= link_to "Analytics", clients_path %></li>
				<li><%= link_to "Clients", clients_path %></li>
			</div>
			<div class="log_in_out">
			<% if current_user %>
				<li><%= link_to "Log Out", session_path(current_user), method: :delete %> </li>
			<% else %>
				<li><%= link_to "Log In", sessions_path %></li>
			<% end %>
			</div>
		</ul>	
	</nav>
</div>
<% end %>
<% if flash[:notice] %>
	<%= flash[:notice] %>
<%end%>
<div class="site_container">
<%= yield %>
</div>

</body>
</html>
