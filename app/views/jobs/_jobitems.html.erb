<div id="jobitems_title">
	<h3>Itemized Balance</h3>
	<p><strong>Total:</strong> $<%= @total_itemized%></p>
</div>
	<% @jobitems.each do |j| %>
		<p class="jobitem_box" id="jobitem_box<%= j.id %>">
			<strong>Name:</strong> <%= j.name %>
			<strong>Price:</strong> $<%= j.price %>
			<strong>Date:</strong> <%= j.date %>
		</p>
	<% end %>
<div id="jobitem_form">
<%= form_for ([@client,@job,@jobitem]) do |f| %>
	<%= f.text_field :name, placeholder: :name %>
	<%= f.date_field :date %>
	<%= f.text_field :price, placeholder: :price %>
	<p><%= f.submit 'Add Item' %></p>
<% end %>
</div>