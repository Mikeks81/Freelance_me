<h1>Jobs#show</h1>
<p>Find me in app/views/jobs/show.html.erb</p>
<div class="client_list">
		<%#= render partial: 'client_list', locals: {clients: @clients} %>
</div>

<div class="job_list">
	<p>Client Name: <%= @job.client.fname%></p>
	<p>Job Name: <%= @job.name%></p>
	<p>Job Description: <%= @job.job_description%></p>
	<p>Date of Job: <%= @job.date_of_job%></p>
	<p>Time: <%= @job.time%></p>
	<p>Price: <%= @job.price%></p>
	<p>Balance: <%= @job.balance%></p>
	<p>Notes: <%= @job.notes%></p>
	<p><%= link_to :controller => "jobs", :action =>'show', format: 'pdf' do %>
		<%='Printable Receipt (PDF)' %>
		<% end %></p>
	<p><%= link_to :controller => "jobs", :action => "send_pdf", format: 'pdf', client_id: @client.id, id: @job.id do %>
		<%= 'Email PDF' %>
		<% end %>
	</p>
</div>