<div id="expense_title"><h3>Job Expenses</h3><p><strong>Total:</strong> $<%= @total_expenses%></p></div>
<% @expenses.each do |e| %>
	<p class="expense_box" id="expense_box<%= e.id %>">
		<strong>Description:</strong> <%= e.description %>
		<strong>Price:</strong> $<%= e.amount %>
		<strong>Date:</strong> <%= e.date %>
	</p>
<% end %>
<div id="expense_form">
	<%= form_for [@client,@job,@expense], remote: true do |f| %>
		<%= f.text_field :description, placeholder: 'Expense Description' %>
		<%= f.text_field :amount, placeholder: :price %>
		<%= f.date_field :date %>
		<p><%= f.submit "Add Expense" %> </p>
	<% end %>
</div>
