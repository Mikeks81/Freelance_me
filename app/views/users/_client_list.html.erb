<% @clients.each do |c| %>
	<% if c.user_id == current_user.id %>
		<div class="client_box">
			<p><%= c.fname %><%= c.lname %></p>
			<p><%= c.business_name %></p>
			<p><%= c.email %></p>
			<p><%= link_to "View Client", client_path(c) 	%>
			<%= link_to "Show Jobs (#{c.jobs.count})", "#", id: :show_jobs %> 
			</p>
			<div class="client_job_list">
				<% if c.jobs.count != 0 %>
					<% c.jobs.each do |j| %>
					<p>
						Name: <%= j.name %>
						Description: <%= j.job_description %>
						<%= link_to "View Job", client_job_path(c,j) %>
					</p>
					<% end %>
				<% end %>
			</div>
		<% elsif current_user.clients.count == 0 %>
			<p>You have no Clients.</p>
		</div>
	<% end %>
<% end %>